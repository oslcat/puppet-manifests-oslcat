#!/bin/bash

. /etc/rc.conf
. /etc/rc.d/functions

PID=`pidof -o %PPID /usr/sbin/wpa_supplicant`

case "$1" in
  start)
    stat_busy "Starting WPA Supplicant"
    [ -z "$PID" ] && wpa_supplicant -i <%= $interface %> -c /etc/wpa_supplicant.conf -B &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon wpa_supplicant
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping WPA Supplicant"
    [ ! -z "$PID" ] && kill $PID &> /dev/null
    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon wpa_supplicant
      stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
esac
exit 0
